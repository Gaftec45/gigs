    <style>
 /* Row styles for gigs */
.gig-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px; /* Add some space between columns */
}

/* Column styles for gigs */
.gig-column {
    flex: 0 0 calc(33.33% - 20px); /* Adjust column width */
    margin-bottom: 20px; /* Add margin to the bottom of each column */
}

/* Card styles for gigs */
.gig-card {
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 10px;
    transition: transform 0.3s ease; /* Add a smooth transition effect */
}

.gig-card  a{
    text-decoration: none;
    color: black;
}

/* Gig image styles */
.gig-card img {
    width: 100%;
    height: 200px; /* Adjust image height */
    border-radius: 5px;
    object-fit: cover; /* Ensure images maintain aspect ratio */
    margin-bottom: 15px; /* Add some space below the image */
}

/* Container styles for gigs */
.gig-container {
    text-align: left;
}

/* Gig title styles */
.gig-title {
    font-size: 18px;
    margin-bottom: 10px;
}

/* Gig description styles */
.gig-description {
    font-size: 16px;
    color: #666;
    margin-bottom: 15px; /* Add some space below the description */
}

/* Button styles for gigs */
.gig-button {
    background-color: #2a9346e1;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

/* Button hover styles for gigs */
.gig-button:hover {
    background-color: #66b079e1;
}
.cheked {
    color: #ffa500
}
/* Media query for smaller screens */
@media only screen and (max-width: 768px) {
    .gig-column {
        flex: 0 0 calc(50% - 20px); /* Make columns half the width on smaller screens */
    }

    .gig-card img {
        height: auto; /* Allow image height to adjust based on content */
        margin-bottom: 10px; /* Reduce margin below the image */
    }

    .gig-title {
        font-size: 16px; /* Decrease font size for better readability */
        margin-bottom: 5px; /* Reduce margin below the title */
    }

    .gig-description {
        font-size: 14px; /* Decrease font size for better readability */
        margin-bottom: 10px; /* Reduce margin below the description */
    }

    .gig-button {
        padding: 8px 16px; /* Adjust button padding */
        font-size: 14px; /* Decrease font size for better readability */
    }
}
    </style>
    <section class="gig-row">
        <% if (gigs && gigs.length > 0) { %>
            <% gigs.slice(0, 3).forEach(gig => { %>
                <div class="gig-column">
                    <div class="gig-card">
                        <a href="/gigs/<%= gig._id %>">
                        <% if (gig.imageUrl) { %>
                            <img class="gig-image" src="<%= gig.imageUrl.replace('public', '') %>" alt="<%= gig.title %> image">
                        <% } %>
                        <div class="gig-container">
                            <p>Best Seller</p>
                            <h4 class="gig-title"><%= gig.title %></h4>
                            <p style="font-size: 15px;"><span style="color:#ffa500;" class="fa fa-star checked"></span> 5.0</p>
                            <p class="gig-price">Starting at : $<%= gig.pricingPackage.basicPrice %></p>
                            <!-- <button class="gig-button">Order Now</button> -->
                        </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="no-gigs-message">No gigs found.</p>
        <% } %>
    </section>